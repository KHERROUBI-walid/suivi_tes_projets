{% block body %}
<link rel="stylesheet" href="{{ asset('/styles/login.css') }}">
<div class="login-container">
    <div class="left-section">
        <!-- Image de fond et texte inspirant -->
        <div class="background-image"><img class="logo" src="/images/logos/suip_claire.png" alt="logo"></img></div>
    </div>

    <div class="right-section">
        <form method="post" class="login-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="form-title">Merci de saisir vos idenifiants</h1>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            
            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                 <div class="password-container">
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <button type="button" class="toggle-password" onclick="togglePasswordVisibility()"><p class="eye-icon">ğŸ‘ï¸</p></button>
                </div>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <div class="form-options">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="_remember_me"> Enregister mes identifiants
                    </label>
                </div>
                <a href="#" class="forgot-password">Mot de passe oubliÃ© ?</a>
            </div>

            <button class="btn-primary" type="submit">
                Se connecter
            </button>
        
        </form>
    </div>
</div>
<script>
    function togglePasswordVisibility() {
        const passwordField = document.getElementById('inputPassword');
        const eyeIcon = document.querySelector('.eye-icon');
        
        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            eyeIcon.textContent = 'ğŸ‘ï¸';
        } else {
            passwordField.type = 'password';
            eyeIcon.textContent = 'ğŸ™ˆ'; 
        }
    }
</script>
{% endblock %}
